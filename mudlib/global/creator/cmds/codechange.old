
// codechange cmd from lord.c, now external and made available for
// all creators. Morgoth 8/Mar/95

#include <standard.h>
#include <cmd.h>

inherit CMD_BASE;

void setup()
{
	position = 1;
}

string query_usage()
{
	return "codechange <text>";
}

string query_short_help()
{
	return "Use it to log any changes to the mudlib.";
}

static int cmd (string str, object me)
{
	if (!str || str=="")
		return notify_fail("Usage : codechange <text>\n");
	log_file("Codechange",ctime(time())+" : "+
		(string)me->query_name()+"\n"+str+"\n");
	write("Ok.\n");
	return 1;
}
